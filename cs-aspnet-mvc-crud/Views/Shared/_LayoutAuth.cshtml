
@{
    ViewBag.Title = "User Authentication";
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ASPNET MVC</title>
    @Styles.Render("~/bundles/css")
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.0/font/bootstrap-icons.css">
    @if (IsSectionDefined("auth_css"))
    {@RenderSection("auth_css")}
</head>
<body>
    <div class="container">
        @RenderBody()

        <hr />

        <footer class="container">
            <p>&copy; @DateTime.Now.Year Company, Inc. &middot; <a href="#">Privacy</a> &middot; <a href="#">Terms</a></p>
            <p>Developed by <a href="https://www.linkedin.com/in/fernandocalmet/">Fernando Calmet R.</a></p>
        </footer>
    </div>    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>
