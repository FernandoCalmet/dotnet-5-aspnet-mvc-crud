@{
    ViewBag.Title = "User Login Authentication";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <main class="form-signin text-center">
        <form action="@Url.Content("~/Auth/Login")" method="post">
            <i class="bi bi-person-check-fill" style="font-size: 60px"></i>
            <h1 class="h3 mb-3 fw-normal">@ViewBag.Title</h1>
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <strong>@ViewBag.Error</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <div class="form-floating">
                <input type="text" class="form-control" name="field_user" id="field_user" placeholder="User" required>
                <label for="field_user">User</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" name="field_pass" id="field_pass" placeholder="Password" required>
                <label for="field_pass">Password</label>
            </div>

            <input class="w-100 mt-4 btn btn-lg btn-primary" type="submit" value="Sign In" />

            <p class="mt-4 mb-4">Do not you have an account yet? @Html.ActionLink("Sign up here", "SignUp", null, new { @class = "text-wrap" })</p>

        </form>
    </main>
}

@section auth_css{
    @Styles.Render("~/bundles/auth/css")
}